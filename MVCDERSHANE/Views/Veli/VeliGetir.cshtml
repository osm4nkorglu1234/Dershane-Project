@model MVCDERSHANE.Models.Entitiy.TBLVELİ
@{
    ViewBag.Title = "VeliGetir";
    Layout = "~/Views/Shared/Layout.cshtml";
}

<h2>VeliGetir</h2>
@using (Html.BeginForm("Guncelle", "Veli", FormMethod.Post))
{
    <div style="margin-bottom:15px"></div>
